<?xml version="1.0" encoding="utf-8" ?>
<kmodule xmlns="http://www.drools.org/xsd/kmodule">
    <!--
    name:指定kbase的名称,需全局唯一
    packages:指定规则文件的目录
    default:指定当前kbase是否为默认
     -->
    <kbase name="rules" packages="rules" default="true">
        <!-- name :需要唯一-->
        <ksession name="all-rule" />
    </kbase>
    <kbase name="rules_2" packages="attr" >
        <!-- name :需要唯一-->
        <ksession name="rule-attr" />
    </kbase>

    <kbase name="rules_3" packages="global" >
        <!-- name :需要唯一-->
        <ksession name="rule-global" />
    </kbase>

    <kbase name="rules_4" packages="query" >
        <!-- name :需要唯一-->
        <ksession name="rule-query" />
    </kbase>
</kmodule>