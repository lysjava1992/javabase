<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.spring.ssm.v2.dao.CustomerDao">
    <select id="findById" resultType="com.learn.spring.ssm.v2.entity.Customer">
        SELECT * FROM  user WHERE id=#{id}
    </select>
    <select id="findByName" resultType="com.learn.spring.ssm.v2.entity.Customer">
        SELECT * FROM  user WHERE username=#{username}
    </select>
    <select id="findAll" resultType="com.learn.spring.ssm.v2.entity.Customer">
        SELECT * FROM  user
    </select>
    <insert id="add" parameterType="com.learn.spring.ssm.v2.entity.Customer"
            useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO user(username,password,create_time)VALUES (#{username},#{password},#{createTime})
    </insert>
   <delete id="deleteById" >
       DELETE FROM user WHERE id=#{id}
   </delete>

</mapper>